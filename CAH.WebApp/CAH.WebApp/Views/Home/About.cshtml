<h2>Home of your Custom CAH Card Generator</h2>
@*<h3>@ViewBag.Message</h3>*@

<p>This is where the card generator will go.</p>
<div class="container">
    <form>
        <div class="form-group row">
            <label for="backText" class="col-sm-2 col-form-label">Card Back Text:</label>
            <div class="col-sm-10">
                <input id="backText" type="text" />
            </div>
        </div>
        <div class="form-group row">
            <label for="frontText" class="col-sm-2 col-form-label">Card Front Text:</label>
            <div class="col-sm-10">
                <textarea  id="frontText" cols="150" rows="15"></textarea>
            </div>
        </div>
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-12">Card Color</legend>
            <div class="col-sm-2">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="black" checked>
                        Black
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="white">
                        White
                    </label>
                </div>                
            </div>
        </fieldset>
        <div class="form-group row">
            <label for="cardLogo" class="col-sm-2 col-form-label">Card Bottom Logo:</label>
            <div class="col-sm-10">
                <input id="cardLogo" type="file" />
            </div>
        </div>
    </form>
</div>
